<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ghosh_2207100_cvbuilder.PreviewCVController">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Your CV Preview" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            <Separator prefWidth="600"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <ImageView fx:id="profileImageView" fitWidth="120" fitHeight="120"/>
                        <VBox spacing="5">
                            <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                            <Label fx:id="emailLabel"/>
                            <Label fx:id="phoneLabel"/>
                            <Label fx:id="addressLabel"/>
                        </VBox>
                    </HBox>

                    <Separator/>

                    <Label text="Education" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <VBox fx:id="educationVBox" spacing="5"/>

                    <Label text="Skills" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <VBox fx:id="skillsVBox" spacing="5"/>

                    <Label text="Work Experience" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <VBox fx:id="experienceVBox" spacing="5"/>

                    <Label text="Projects" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <VBox fx:id="projectsVBox" spacing="5"/>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
