<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ghosh_2207100_cvbuilder.CreateCVController">

    <top>
        <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #f0f8ff;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Create Your CV" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Fill in your details below" style="-fx-text-fill: #555;"/>
        </VBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fullNameField"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                       promptText="Enter your full name"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="Enter your email"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="Enter your phone number"/>

            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"
                       promptText="Enter your address"/>

            <Label text="Skills:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="skillsArea"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"
                      prefRowCount="3"
                      promptText="e.g. Java, JavaFX, SQL"/>

            <Label text="Work Experience:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="experienceArea"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"
                      prefRowCount="4"
                      promptText="List your work experience, one per line"/>

            <Label text="Projects:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="projectsArea"
                      GridPane.rowIndex="6" GridPane.columnIndex="1"
                      prefRowCount="4"
                      promptText="List your projects, one per line"/>

        </GridPane>
    </center>

    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="0"/>
            </padding>

            <ImageView fx:id="profileImagePreview" fitWidth="120" fitHeight="120"
                       style="-fx-border-color: #ccc; -fx-border-width: 1;"/>

            <Button fx:id="uploadButton" text="Upload Photo"
                    onAction="#handleUploadPhoto"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

            <Separator/>

            <Button fx:id="generateButton" text="Generate CV"
                    onAction="#handleGenerateCV"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </right>

</BorderPane>
